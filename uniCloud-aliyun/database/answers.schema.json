// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"content" : {
			"bsonType": "string",
			"description": "回答内容"
		},
		"images" : {
			"bsonType": "array",
			"arrayType": "file",
			"description": "回答图片",
			"fileMediaType": "image", 
			"fileExtName": "jpg,png", // 扩展名过滤
			"maxLength": 3 // 限制最大数量
		},
		"question_id" : {
			"bsonType": "string",
			"description": "回答的问题编号"
		},
		"user_id" : {
			"bsonType": "string",
			"description": "回答者id"
		},
		"time" : {
			"bsonType": "timestamp",
			"description": "回答时间"
		},
		"parent_id" : {
			"bsonType": "string",
			"description": "想要回复的帖子的id"
		},
		"thumbs" : {
			"bsonType": "int",
			"description": "赞数"
		}
	}
}